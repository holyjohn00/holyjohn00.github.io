  </div>

  <script>
    (function () {
      const slides = Array.from(document.querySelectorAll(".slide"));
      const total = slides.length;
      let index = 0;

      function updateButtons() {
        const currentSlide = slides[index];
        const slideBtns = currentSlide.querySelectorAll(".controls button");
        const prevDisabled = index === 0;
        const nextDisabled = index === total - 1;

        slideBtns.forEach(btn => {
          if (btn.textContent.includes("Prev")) {
            btn.disabled = prevDisabled;
            btn.onclick = () => changeSlide(index - 1);
          } else if (btn.textContent.includes("Next")) {
            btn.disabled = nextDisabled;
            btn.onclick = () => changeSlide(index + 1);
          } else if (btn.id === "finishBtn") {
            btn.onclick = () => changeSlide(0);
          }
        });

        const globalPrev = document.getElementById("prevBtn");
        const globalNext = document.getElementById("nextBtn");
        if (globalPrev && globalNext) {
          globalPrev.disabled = prevDisabled;
          globalNext.disabled = nextDisabled;
          globalPrev.onclick = () => changeSlide(index - 1);
          globalNext.onclick = () => changeSlide(index + 1);
        }
      }

      function changeSlide(newIndex) {
        if (newIndex < 0 || newIndex >= total) return;
        slides[index].classList.remove("active");
        index = newIndex;
        slides[index].classList.add("active");
        updateButtons();
      }

      document.addEventListener("keydown", (e) => {
        if (e.key === "ArrowRight") changeSlide(index + 1);
        if (e.key === "ArrowLeft") changeSlide(index - 1);
      });

      updateButtons();
    })();
  </script>
